@model IEnumerable<Game>

@{
    ViewData["Title"] = "Games";
}

<h2 class="page-title">
    <i class="fas fa-gamepad"></i> Games
</h2>
@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">NO Games Found</h4>
        <p class="mb-0">No games were added yet. </p>
    </div>
}
else{
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a class="btn btn-outline-secondary btn-lg" asp-action="Create">
              <i class="bi bi-plus-circle-dotted "></i>
                Add Game
            </a> 
        </div>

        <div class="row">
            @foreach (var game in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card game-card mb-4">
                        <img src="@($"{FileSettings.ImagePath}/{game.Cover}")" class="card-img-top game-cover" alt="@game.Name">
                        <div class="card-body text-center">
                            <h5 class="card-title">@game.Name</h5>
                            <p class="card-text text-muted">@game.Category.Name</p>
                            <div class="d-flex justify-content-center gap-2">
                                <a  class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@game.ID"><i class="bi bi-pencil-fill" ></i> Edit</a>
                                <a href="javascript:;" class="btn btn-danger btn-sm js-delete" data-id="@game.ID">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

  @section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/games-index.js" asp-append-version="true"></script>
  }
}

