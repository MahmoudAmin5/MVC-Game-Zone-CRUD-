@model Game
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="card rounded-4 shadow-lg p-4 bg-dark text-light">
        <div class="row align-items-center">
            <!-- Game Details Section -->
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <h1 class="fw-bold text-white">@Model.Name</h1>

                <!-- Category Badge -->
                <span class="badge bg-primary fs-6 px-3 py-2 rounded-pill">
                    @Model?.Category.Name
                </span>

                <!-- Game Description -->
                <p class="fs-5 mt-3 text-light-emphasis">
                    @Model.Description
                </p>

                <!-- Supported Devices Icons -->
                <div class="mt-3">
                    @foreach (var GameDevice in Model.Devices)
                    {
                        <i class="@GameDevice.Device.Icon me-3 fs-3 text-secondary"></i>
                    }
                </div>
            </div>

            <!-- Game Cover Section -->
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagePath}/{Model.Cover}")"
                     alt="@Model.Name"
                     class="img-fluid rounded-3 shadow">
            </div>
        </div>
    </div>
</div>

 
